<div class="header">
    <h2 class="follow"> Follow what I'm up to here:: </h2>
</div>

<div class="form-group">
    <div class="container">
        <% @posts.each do |post| %>
        <div class="col-xs-12">
            <div class="create">
                <div>
                    <h2 class="title">
                        <%= post.title %>
                    </h2>
                    <p class="time">
                        <%= post.created_at.strftime('%b %d, %Y') %>
                    </p>
                </div>

                <p class="content">
                    <%= raw(post.body).truncate(358) %>
                </p>

                <div class="text-center">
                    <%= link_to "READ MORE", post_path(post) %>
                </div>
            </div>
            <br>
        </div>
        <% end %>
    </div>
</div>

<div>
    <button>
        <%= link_to 'New Post', "posts/new" %>
    </button>
</div>